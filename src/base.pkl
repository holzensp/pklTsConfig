module Base

//typealias BaseItems = Mapping<String, Boolean|String>


class BaseItems {
    esModuleInterop: Boolean
    skipLibCheck: Boolean
    target: String
    allowJs: Boolean
    resolveJsonModule: Boolean
    moduleDetection: String
    isolatedModules: Boolean
}

const Base: BaseItems = new  {
    esModuleInterop = true
    skipLibCheck = true
    target = "es2022"
    allowJs = true
    resolveJsonModule = true
    moduleDetection = "force"
    isolatedModules = true
}

function addBaseItems(baseItems: BaseItems, useBase: Boolean): Map =
    if (useBase) 
        baseItems.toMap()
    else
        Map()