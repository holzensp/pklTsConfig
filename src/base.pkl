module Base

//typealias BaseItems = Mapping<String, Boolean|String>


class BaseItems {
    esModuleInterop: Boolean
    skipLibCheck: Boolean
    target: String
    allowJs: Boolean
    resolveJsonModule: Boolean
    moduleDetection: String
    isolatedModules: Boolean
}

const Base: BaseItems = new  {
    esModuleInterop = true
    skipLibCheck = true
    target = "es2022"
    allowJs = true
    resolveJsonModule = true
    moduleDetection = "force"
    isolatedModules = true
}

function addBaseItems(baseItems: Object, useBase: Boolean): Map = 
    if (useBase) 
        new  BaseItems {
            esModuleInterop = baseItems.esModuleInterop
            skipLibCheck =  baseItems.skipLibCheck
            target =  baseItems.target
            allowJs =  baseItems.allowJs
            resolveJsonModule =  baseItems.resolveJsonModule
            moduleDetection =  baseItems.moduleDetection
            isolatedModules =  baseItems.isolatedModules
        }.toMap()
    else
        Map()