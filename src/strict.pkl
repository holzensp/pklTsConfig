module Strict

strict = true
noUncheckedIndexedAccess = true

class StrictItems {
    strict: Boolean
    noUncheckedIndexedAccess: Boolean
}

const Strict: StrictItems = new StrictItems {
    strict = true
    noUncheckedIndexedAccess = true
}

function addStrictItems(StrictItems: StrictItems, useStrict: Boolean): Map = 
    if (useStrict) 
        new StrictItems{
            strict = StrictItems.strict
            noUncheckedIndexedAccess = StrictItems.noUncheckedIndexedAccess
        }.toMap()
    else
        Map()
