module Monorepo

class MonorepoItems {
    declarationMap: Boolean
    declarationDir: String
    emitDeclarationOnly: Boolean
}

const Monorepo: MonorepoItems = new MonorepoItems {
    declarationMap = true
    declarationDir = "dist"
    emitDeclarationOnly = true
}

function addMonorepoItems(MonorepoItems: MonorepoItems, useMonorepo: Boolean): Map = 
    if (useMonorepo) 
        new MonorepoItems {
            declarationMap = MonorepoItems.declarationMap
            declarationDir =  MonorepoItems.declarationDir
            emitDeclarationOnly =  MonorepoItems.emitDeclarationOnly
        }.toMap()
    else
        Map()
